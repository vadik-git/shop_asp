@model IEnumerable<Shop.Models.Product>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-success"  asp-action="Upsert"> Create new product</a>
        </div>
    </div>
    @if(Model.Count() > 0)
     {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">@item.Name</td>
                        <td width="10%">@item.Price</td>
                        <td width="20%">@item.Category.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group">
                                <a class="btn btn-warning" asp-route-Id="@item.Id" asp-action="Upsert">Edit</a>
                                <a class="btn btn-danger" asp-route-Id="@item.Id" asp-action="Delete">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
     }
     else
     {
        <p>No products found.</p>
     }
</div>
@model Shop.Models.Product

<div class="row">
    <div class="col-8">
        <div class="form-group row">

            <div class="col-4">
                <label asp-for="Name">@Model.Name</label>
            </div>

        </div>
        <div class="form-group row">

            <div class="col-4">
                <label asp-for="Price">@Model.Price</label>
            </div>

        </div>
        <div class="form-group row">

            <div class="col-4">
                <label asp-for="CategoryId">@Model.CategoryId</label>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-8 offset-4">
                <div>
                    <form asp-controller="Product" asp-action="Delete" method="post">
                        <div class="form-group">
                            <input type="submit" class="btn bg-danger text-white w-100" value="Delete" />
                        </div>
                    </form>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success w-100 ">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

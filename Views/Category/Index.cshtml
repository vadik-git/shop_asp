@model IEnumerable<Shop.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
       <div class="col-6 text-right">
           <a class="btn btn-success" asp-controller="Category" asp-action="Create"> Create new category</a>
       </div>
    </div>
    @if (Model.Count() > 0)
     {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Show Order
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Name</td>
                        <td width="30%">@item.ShowOrder</td>
                        <td class="text-center">
                            <div class="w-75 btn-group">
                                <a class="btn btn-warning mx-2" asp-route-Id="@item.Id" asp-controller="Category" asp-action="Edit">Edit</a>
                                <a class="btn btn-danger mx-2" asp-route-Id="@item.Id" asp-controller="Category" asp-action="Delete">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
     }
     else
     {
        <p>No categories found. </p>
     }
</div>